  </div>  
</div>
</nav>

 <div class="container">
 <%= react_component 'Main' %>
 <table class="table table-striped table-responsive w-auto">
  <thead>
    <tr>
	  <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Authors</th>
	  <th scope="col">Tags</th>
    </tr>
  </thead>
  <tbody>
   <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
	  <td><%= link_to article.title, article_path(article) %></td>
      <td><%= article.author %></td>
	  <td><%= article.tags %></td>
      <td><%= link_to 'Read More', article_path(article) %></td>
	  <td><%= link_to 'Edit', edit_article_path(article) %></td>
	  <td><%= link_to 'Delete', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>

    </tr>
    <% end %>
	
  </tbody>
  </table>
 </div>
 
 <div class="container">  
	<button type="button">	
	<%= link_to 'Add New', new_article_path  %>
	</button>
 </div>

 <div class="container">
<% @articles.each do |article| %> 
  <ul class="pagination">
   
    <li class="page-item"><%=link_to article.id,article_path(article) %></li>
   
  </ul>
<% end %>

</div>
 
